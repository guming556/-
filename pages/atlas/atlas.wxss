}
.cover-box .img-box swiper swiper-item .img-detail{
  width: 100%;
  height: calc(100% - 138rpx);
  display: flex;
  align-items: center;
}
.cover-box .img-box image{
  width: 100%;
  max-height: 100%;
}
.cover-box .img-source{
  color: #474747;
  line-height: 60rpx;
  font-size: 20rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

