.atlas-default{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.atlas-icon{
  margin-top: 110rpx;
}
.atlas-icon image{
  width: 440rpx;
}
.atlas-share{
  width: 400rpx;
  height: 120rpx;
  margin-top: 40rpx;
  position: relative;
}
.atlas-share image{
  width: 100%;
  height: 100%;
}
.atlas-share button{
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 120rpx;
  left: 0;
  top: 0;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  background: transparent;
