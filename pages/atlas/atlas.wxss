.img-left .img-box .new-mark,.img-right .img-box .new-mark{
  width: 72rpx;
  height: 28rpx; 
  position: absolute;
  top: 6rpx;
  right: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img-left .img-box .new-mark image,.img-right .img-box .new-mark image{
